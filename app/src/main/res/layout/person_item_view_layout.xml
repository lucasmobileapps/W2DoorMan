<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E9E9E9"
    android:id="@+id/person_item_view_layout"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/name_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/name_textview"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="32dp"
        android:src="@drawable/ic_launcher_background"/>
    <TextView
        android:id="@+id/name_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/name_imageview"
        app:layout_constraintBottom_toTopOf="@+id/relation_textview"
        android:hint="Name"
        android:textSize="24dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/relation_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/name_textview"
        app:layout_constraintStart_toEndOf="@+id/name_imageview"
        app:layout_constraintBottom_toBottomOf="parent"
        android:hint="Relation"
        android:textSize="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>